!---------------------------------------------------------------------!
! XTerm settings                                                      !
!---------------------------------------------------------------------!

xterm*faceName: Awoof
xterm*faceSize: 26
xterm*geometry: 80x24


!---------------------------------------------------------------------!
! URxvt settings                                                      !
! More info at:                                                       !
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod !
!---------------------------------------------------------------------!

URxvt.depth:            32
URxvt.geometry:         80x24
URxvt.loginShell:       true
URxvt.saveLines:        1000
URxvt.internalBorder:   3
URxvt.lineSpace:        3
URxvt.scrollBar:        false

!! Fonts

!URxvt*font:             xft:Monospace:size=18
!URxvt*boldFont:         xft:Monospace:bold:size=18
URxvt*font: xft:Awoof:size=26
URxvt*boldFont: xft:Awoof:bold:size=26

!! Disable all perl extensions.

URxvt*perl-ext:
URxvt*perl-ext-common:

!! Colors

*underlineColor:  yellow

*foreground:  #FFFFFF
*background:  #222222
!*cursorColor: #93a1a1

! black dark/light
*color0:  #3F3F3F
*color8:  #709080

! red dark/light
*color1:  #DC322F
*color9:  #E14F4C

! green dark/light
*color2:  #00BA50
*color10: #2AF791

! yellow dark (brown)/light
*color3:  #CC961F
*color11: #FFDA10

! blue dark/light
*color4:  #2699EE
*color12: #26CCEE

! magenta dark/light
*color5:  #DF11DF
*color13: #EE24EE

! cyan dark/light
*color6:  #00D7B3
*color14: #00F9CF

! white dark/light
*color7:  #DDDFFF
*color15: #FFFFFF

Xcursor.theme: breeze_cursors
